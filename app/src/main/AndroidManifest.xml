<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.anika.beratungsapp">

    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        >
        <activity android:name=".Hauptmenue">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Quiz" />
        <activity android:name=".FrageElegant" />
        <activity android:name=".FrageAlternativ"
            android:launchMode="singleTask"/>
        <activity android:name=".FrageExzentrisch" />
        <activity android:name=".Picturequiz" />
        <activity android:name=".Sortieren"
            android:launchMode="singleTask"/>
        <activity android:name=".Farbenquiz" />
        <activity android:name=".Wordquiz" />
        <activity android:name=".FrageSportlich" />
        <activity android:name=".FrageFigurbetont" />
        <activity android:name=".FrageCasual" />
        <activity android:name=".FrageRockig" />
        <activity android:name=".FrageRomantisch"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>